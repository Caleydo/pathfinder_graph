{
  "name": "pathfinder_graph",
  "description": "Pathfinder Python Server plugin for communicating with Neo4j",
  "version": "0.0.1",
  "license" : "SEE LICENSE IN LICENSE",
  "repository": "Caleydo/pathfinder_graph",
  "homepage": "http://www.caleydo.org/tools/pathfinder/",
  "dependencies": {
  },
  "peerDependencies": {
    "caleydo_server": "*"
  },
  "scripts": {
    "postinstall": "./_scripts/setup.sh"
  },
  "caleydo": {
    "type": "app",
    "plugins": {
      "python": [
        {
          "type": "namespace",
          "id": "pathfinder_graph",
          "file": "pathway",
          "namespace": "/api/pathway"
        }
      ]
    },
    "dependencies": {
      "python": {
        "py2neo": ">=2.0.4",
        "pydotplus": "==2.0.2"
      }
    },
    "scripts": {
      "pre_start": [
        "sudo service memcached start",
        "~/neo4j_dblp start",
        "~/neo4j_pathways start",
        "~/neo4j_marklab start"
      ]
    }
  },
  "publishConfig": {
    "registry": "http://registry.caleydo.org/"
  }
}
